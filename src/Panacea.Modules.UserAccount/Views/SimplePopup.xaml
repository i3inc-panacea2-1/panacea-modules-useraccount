<UserControl
    x:Class="Panacea.Modules.UserAccount.Views.SimplePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.UserAccount.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pc="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    pc:Material.RelativeFontSizeRatio="1.2"
    mc:Ignorable="d">
    <Grid Margin="20">
        <TextBlock
            Name="txt"
            Margin="20"
            Text="{Binding Text}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
